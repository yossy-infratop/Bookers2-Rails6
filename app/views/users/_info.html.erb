<table class="table">
  <tbody>
    <tr><%= image_tag user.get_profile_image(100, 100) %></tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>follows</th>
      <td class="followings-path-<%= user.id %>"><%= render "relationships/followings_path", user: user %></td>
    </tr>
      <tr>
      <th>followers</th>
      <td class="followers-path-<%= user.id %>"><%= render "relationships/followers_path", user: user %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <div class="cal info-follow-btn-<%= user.id %>">
    <%= render "relationships/follow_btn", user: user, info: true %>
  </div>&emsp;
  <div class="cal chat-room"><%= render "rooms/chat", user: user, is_room: @is_room, room: @room, room_id: @room_id %></div>
  <% if user.name != "guestuser" %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>