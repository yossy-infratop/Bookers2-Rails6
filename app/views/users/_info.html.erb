<table class="table">
  <tbody>
    <tr><%= image_tag user.get_profile_image(100, 100) %></tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>follows</th>
      <td><%= link_to user.followings.count, user_followings_path(user) %></td>
    </tr>
      <tr>
      <th>followers</th>
      <td><%= link_to user.followers.count, user_followers_path(user) %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-info", method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success", method: :post %>
    <% end %>
  <% end %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
   <i class="fas fa-user-cog"></i>
  <% end %>
</div>