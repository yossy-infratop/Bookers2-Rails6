<% if current_user != user %>
  <% if current_user.following?(user) %>
    <% if info %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-info", method: :delete, remote: true %>
    <% else %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true %>
    <% end %>
  <% else %>
    <% if info %>
      <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success", method: :post, remote: true %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true %>
    <% end %>
  <% end %>
<% end %>