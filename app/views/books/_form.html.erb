<%= form_with model: book, url: url, local: true do |f| %>
  <div class="form-group">
    <%= f.label :book_title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :book_opinion, "Opinion" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Tag (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :tag_name, value: book.tags.pluck(:name).join(','), class:"form-control"%>
  </div>
  <% if submit == 'Create Book' %>
    <div class="form-group" id="star">
      <%= f.label :rate, "rate" %>
      <%= f.hidden_field :rate, id: :"review_star" %>
      <%= render 'books/star', book: book, readonly: false %>
    </div>
  <% else %>
    <div class="form-group">
      <%= render 'books/star', book: book, readonly: true %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit submit, class: "btn btn-success" %>
  </div>
<% end %>